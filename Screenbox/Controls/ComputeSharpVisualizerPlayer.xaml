<UserControl
    x:Class="Screenbox.Controls.ComputeSharpVisualizerPlayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:computesharp="using:ComputeSharp.Uwp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Screenbox.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <computesharp:AnimatedComputeShaderPanel
            IsDynamicResolutionEnabled="False"
            IsVerticalSyncEnabled="True"
            ResolutionScale="{x:Bind Shader.ScaleFactor, Mode=OneWay}"
            ShaderRunner="{x:Bind Shader.ShaderRunner, Mode=OneWay}" />
        <Border
            Width="250"
            Height="250"
            CornerRadius="5"
            Visibility="{x:Bind Shader.ShaderProperties.IsAlbumArt, Mode=OneWay}">
            <Image Source="{x:Bind Media.Thumbnail, Mode=OneWay, FallbackValue={x:Null}}" />
        </Border>
    </Grid>
</UserControl>
